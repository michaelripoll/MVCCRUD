@model DB.Models.Beer;
@{

}

<div class="col-md-12">
    <div class="row">
        <form asp-action="IndexPost" asp-controller="Beer" method="post">
            <div class="col-sm-6">
                <div class="mb-3">
                    <label class="control-label">Marca</label>
                    <select asp-for="BrandId" id="brandId" name="brandId" class="select2 form-control select2-multiple" required>
                        <option disabled selected>Seleccione...</option>
                        @{
                            @foreach (var item in ViewBag.BrandId)
                            {
                                <option value="@item.BrandId">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="Name">Nombre </label>
                    <input id="name" asp-for="Name" name="name" type="text" class="form-control" placeholder="Escriba los Nombres ..." required>
                </div>

                <button type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>